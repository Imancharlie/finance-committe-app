# Environment Variables Configuration for Bossin Finance Committee App
# Copy this file to .env and fill in your actual values

# Django Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Database Configuration (Production - MySQL)
DATABASE_URL=mysql://username:password@localhost:3306/database_name

# Alternative individual database settings
DB_ENGINE=django.db.backends.mysql
DB_NAME=bossin_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# Email Configuration (Optional - for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# File Upload Settings
MEDIA_URL=/media/
STATIC_URL=/static/
MEDIA_ROOT=/path/to/media/directory
STATIC_ROOT=/path/to/static/directory

# PWA Settings
PWA_APP_NAME=Bossin Finance Committee
PWA_APP_DESCRIPTION=Financial management system for committees
PWA_APP_THEME_COLOR=#7492b9
PWA_APP_BACKGROUND_COLOR=#ffffff
PWA_APP_ICONS=[
    {
        "src": "/static/images/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
    },
    {
        "src": "/static/images/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
    }
]

# Organization Settings (Default)
DEFAULT_PLEDGE_AMOUNT=70000
TARGET_AMOUNT=210000
THEME_COLOR=#7492b9

# Logging (Optional)
LOGGING_LEVEL=INFO
LOG_FILE=/path/to/logs/django.log

# Admin Settings
ADMIN_URL=admin/
